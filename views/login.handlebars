<!-- Receives newUser -->

<h2 class="page-title">Account Login</h2>
<form method="post" action="/users/login">
  <div class="form-group">
    <label>Name</label>
    <input type="text" class="form-control" name="username" placeholder="Enter name..." value="{{newUser.name}}">
  </div>
  <div class="form-group">
    <label>Password</label>
    <input type="password" class="form-control" name="password" placeholder="Enter password..." value="{{newUser.password}}">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
